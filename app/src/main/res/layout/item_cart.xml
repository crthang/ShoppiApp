<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_whiteboder"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="65dp"
            android:layout_height="65dp">
            <ImageView
                android:id="@+id/cart_image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="13.4dp"
                android:layout_marginTop="14.4dp"
                android:layout_marginBottom="14.4dp"
                android:scaleType="centerCrop" />
            <ProgressBar
                android:id="@+id/progressbarCart"
                android:layout_width="65dp"
                android:layout_height="65dp"/>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cart_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="Cocobolo Poolside Bar + Grill"
                android:textColor="@color/mau_cam"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cart_gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="2dp"
                android:text="$ 50.00"
                android:textColor="#9b9b9b"
                android:textSize="12sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/car_delete"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>